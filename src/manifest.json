{
	"name": "BetterStreamChat",
	"version": "1.1.1",
	"description": "Twitch Chat Colors in YouTube or Trovo Chat",
	"manifest_version": 2,
	"content_scripts": [
		{
			"js": [
				"init.js"
			],
			"css": [
				"betterstreamchat.css"
			],
			"matches": [
				"https://trovo.live/*",
				"https://www.youtube.com/*"
			]
		}
	],
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"permissions": [
		"storage",
		"https://api.twitch.tv/*",
		"https://api.betterttv.net/*",
		"https://api.twitchemotes.com/*"
	]
}